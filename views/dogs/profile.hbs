<div class="profileview">
  <div class="container">
    <div class="card">
      <div class="profhead">
        <a href="/users/{{ dog.owner }}"> <img src=" {{ user.imgPath}}" class="small-profilepic floating" alt="" /></a>

        <img src="{{dog.imgPath}}" class="profilepic main">

        <h5>{{ dog.name}}<span class='gender'></span></h5>
        <p class='address'> <img src="/images/pin.svg" alt=""> {{ user.address.street}}
          {{ user.address.houseNumber}},
          {{ user.address.zip}} {{ user.address.city}}</p>

        <p class="dogdetails">{{ dog.name }} is a(n) <b>{{ dog.breed }}</b> <br>
          who's <b>{{ dog.age }}</b> year(s) old. ðŸ¦´</p>


        <div class="profile-content">
          <p class='description'>{{ dog.description}}</p>
        </div>

        {{#each dog.timeslots}}
        <p>I'm available for a walk: {{ this }}</p>
        {{/each}}



        <form action="/dogs/{{dog._id}}" method="POST">
          <button type="submit" class="bt-edit">Book a walk</button>
        </form>

      </div>
    </div>
  </div>

</div>


<script type='text/javascript'>

  document.addEventListener("DOMContentLoaded", () => {
    if ('{{ dog.gender }}' == 'male') {
      document.querySelector('span.gender').innerHTML = "<img src='/images/male.svg'>"
    } else {
      document.querySelector('span.gender').innerHTML = "<img src='/images/female.svg'>"
    }
  });

  document.querySelector('.bt-edit').addEventListener('click', () => {
    if ($('form')[0].checkValidity() == true) {
      document.querySelector('.overlay').style.display = "block"

      setTimeout(function () {
        window.location('dogs/cards');
      }, 2000);
    }

  });

</script>