<div class="container">

  <div class="card">
    <h3>Sign Up</h3>
    <form action="/signup" method="POST" id="form-container">
      <div class="input-container">
        <input type="#{type}" id="#{label}" name="username" required="required" />
        <label for="username">E-mail</label>
        <div class="bar"></div>
      </div>
      <div class="input-container">
        <input type="password" id="#{label}" name="password" required="required" />
        <label for="password">Password</label>
        <div class="bar"></div>
      </div>

      <div class="radio vertical">
        <label>
          <input type="radio" name="type" value="dog-owner" checked />
          <span>I have a dog</span>
        </label>
        <label>
          <input type="radio" name="type" value="dog-walker" />
          <span>I want to walk a dog</span>
        </label>
      </div>

      <div class="errormsg">
        {{#if errorMessage}}
        {{ errorMessage }}
        {{/if}}
      </div>

      <div class="button-container">
        <button class="bt-signup"><span>Create account</span></button>



        <p class="account">
          Have an account?
          <a href="/login">Log In</a>
      </div>
    </form>
  </div>